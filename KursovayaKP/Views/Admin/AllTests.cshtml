@using KursovayaKP.Models;
@model TestModel[]

@{
	ViewData["Title"] = $"Все вопросы {ViewBag.Topic}";
}

@section Styles {
	<link rel="stylesheet" href="~/css/Questions.css" asp-append-version="true" />
	<script src="~/js/AllTests.js" asp-append-version="true"></script>
}
<div id="question-container">
	<a class="text-dark" asp-area="" asp-controller="Admin" asp-action="AddTest" style="margin-left: 0px; text-decoration: none">Добавить тест</a>
	<div class="vertical-line"></div>
	<a class="text-dark" asp-area="" asp-controller="Admin" asp-action="AddQuestions" style="margin-left: 0px; text-decoration: none">Добавить вопрос в тест</a>
	<div class="vertical-line"></div>
	<button id="settingsButton" style="color: black; border: none; background-color: white;">Расширенные настройки</button>
</div>

<div id="toolsMenu" style="display: none; width: 500px">
	<input id="searchInput" placeholder="Поиск" style="width:100%;" />
	<div>
		<button id="sortByNameButton" class="image-button" style="margin-top: 3px; background-image: url('https://media.discordapp.net/attachments/1160898526201516052/1213753761848369172/from-a-to-z.png?ex=661b8947&is=66091447&hm=558afca666113699ea772cfba726f07f7aa2436691998a446752f803b66ee615&=&format=webp&quality=lossless')" title="Сортировка в алфавитном порядке"></button>
		<button id="sortByNumberButton" class="image-button" style="margin-top: 3px; background-image: url('https://media.discordapp.net/attachments/1160898526201516052/1213756755734175784/up-and-down.png?ex=661b8c11&is=66091711&hm=42dd5d97d3c942e3f52eb8f13a96e03986e2eeba3c68e8e5a85ebbe419219b29&=&format=webp&quality=lossless')" title="Сортировка в по номеру вопроса"></button>
		<button id="cancellation" class="image-button" style="margin-top: 3px; background-image: url('https://media.discordapp.net/attachments/1160898526201516052/1213760647532249088/cancel.png?ex=661b8fb0&is=66091ab0&hm=92c29784caf63b3933c4915be23d1d01f7ce20e907b40b17eb5ac912d013a004&=&format=webp&quality=lossless')" title="Отмена фильтрации"></button>
	</div>
	<ul>
		<li>Инструмент 1</li>
		<li>Инструмент 2</li>
		<li>Инструмент 3</li>
	</ul>
</div>

<h1 id="title">Тесты</h1>

<div id="question-container">
	@if (Model != null)
	{
		@foreach (var test in Model)
		{
			<div class="question" data-question-id="@test.IdTest">
				<form class="question-form" method="post">
					<div><label>Тест №@test.IdTest</label></div>
					<input type="hidden" name="testId" value="@test.IdTest" />
					<div><label>Название теста: @test.NameTest</label></div>
					<div><label>Категория: <span class="category-label">@test.IdCategory</span></label></div>
					<button class="image-button delete-button" style="background-image: url('https://media.discordapp.net/attachments/1160898526201516052/1211257334207352832/Delete.png?ex=661baecc&is=660939cc&hm=561a436d025963f0afe7f39b92d239c2787ef79bee70746720c25f8512e8c481&=&format=webp&quality=lossless')" title="Удалить"></button>
					<button asp-controller="Admin" asp-action="DeleteTest" class="image-button confirm-delete-button" style="background-image: url('https://media.discordapp.net/attachments/1160898526201516052/1219542277521670214/checked.png?ex=660bae40&is=65f93940&hm=72f2a0f59069d0159a8c318b7bde48acf5815b0b93a1393907b41e9227886aab&=&format=webp&quality=lossless'); display: none;" title="Подтвердить удаление" data-id="@test.IdTest"></button>
					<button class="image-button cancel-delete-button" style="background-image: url('https://media.discordapp.net/attachments/1160898526201516052/1219542299357351966/close.png?ex=660bae46&is=65f93946&hm=a736d8adaa89fce43938c8bc2a76a2a982c567dc3d51892ef6c8608f1f5d50bb&=&format=webp&quality=lossless'); display: none;" title="Отменить удаление"></button>
					<button asp-controller="Admin" asp-action="TestForUpdate" class="image-button edit-button" style="background-image: url('https://media.discordapp.net/attachments/1160898526201516052/1211262049162625065/Editing.png?ex=661bb330&is=66093e30&hm=2d6df4cae78529395024ab9cc82f5486547574c4298b5b49aa7ae10e92823b4b&=&format=webp&quality=lossless')" title="Редактировать" data-id="@test.IdTest"></button>
					<button asp-controller="Admin" asp-action="TestQuestions" class="image-button questions-button" style="background-image: url('https://media.discordapp.net/attachments/1160898526201516052/1218557413884432384/question.png?ex=661a8e07&is=66081907&hm=2cca378cac8bcc3eb7a2e15a1ee37ccc66809eacd3ca85da7aeae610a3ddadb2&=&format=webp&quality=lossless')" title="Вопросы теста" data-id="@test.IdTest"></button>
				</form>
			</div>
		}
	}
</div>

<script>
	const deleteButtons = document.getElementsByClassName('delete-button');
	const confirmDeleteButtons = document.getElementsByClassName('confirm-delete-button');
	const cancelDeleteButtons = document.getElementsByClassName('cancel-delete-button');
	const editButtons = document.getElementsByClassName('edit-button');
	const questionsButtons = document.getElementsByClassName('questions-button');

	for (let i = 0; i < deleteButtons.length; i++) {
		const deleteButton = deleteButtons[i];
		const confirmDeleteButton = confirmDeleteButtons[i];
		const cancelDeleteButton = cancelDeleteButtons[i];
		const editButton = editButtons[i];
		const questionsButton = questionsButtons[i];

		deleteButton.addEventListener('click', function (event) {
			event.preventDefault();
			deleteButton.style.display = 'none';
			confirmDeleteButton.style.display = 'inline-block';
			cancelDeleteButton.style.display = 'inline-block';
			editButton.style.display = 'none'; // Скрываем кнопку "Редактировать"
			questionsButton.style.display = 'none'; // Скрываем кнопку "Вопросы теста"
		});

		cancelDeleteButton.addEventListener('click', function (event) {
			event.preventDefault();
			deleteButton.style.display = 'inline-block';
			confirmDeleteButton.style.display = 'none';
			cancelDeleteButton.style.display = 'none';
			editButton.style.display = 'inline-block'; // Отображаем кнопку "Редактировать"
			questionsButton.style.display = 'inline-block'; // Отображаем кнопку "Вопросы теста"
		});
	}
</script>
